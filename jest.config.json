{
  "coverageThreshold": {
    "global": {
      "branches": 20,
      "functions": 40,
      "lines": 50,
      "statements": 50
    }
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "setupFiles": [
    "./jest.setup.ts"
  ]
}